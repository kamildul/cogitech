{% extends 'base.html.twig' %}

{% block title %}Lista{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Lista <small>[<a href="{{ path('app_logout') }}">Wyloguj</a>]</small></h1>
    <table width="100%" border=1>
        <thead>
            <tr>
                <th>ID</th>
                <th>Tytuł</th>
                <th>Treść</th>
                <th>Autor</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.body }}</td>
                    <td>{{ post.user }}</td>
                    <td><a href="{{ path('delete_post', {'id': post.id}) }}" onclick="return confirm('Czy na pewno chcesz usunąć?')">Usuń</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
